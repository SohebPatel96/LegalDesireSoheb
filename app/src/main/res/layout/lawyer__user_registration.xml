<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:padding="20dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.msp.legaldesire.Lawyer_User_registration">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <TextView
                android:id="@+id/textView_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/personal_info"
                android:textColor="#FF4500"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView_personal"
                android:gravity="center"
                android:text="Enter your Mobile Number"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF4500" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView4"
                android:gravity="center"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText3"
                android:gravity="center"
                android:text="Enter your City"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF4500" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:gravity="center" />


            <TextView
                android:id="@+id/textView_professional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText4"
                android:text="@string/pro_info"
                android:textColor="#FF4500"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_professional"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Type of Lawyer:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF4500" />

            <LinearLayout
                android:id="@+id/wrap_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_type"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radio_grp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_civil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Civil"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/radio_criminal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Criminal"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/radio_corporate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Corporate"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/radio_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="16sp" />
                </RadioGroup>

            </LinearLayout>


            <TextView
                android:id="@+id/textView_office_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wrap_type"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Select Office/Firm Location(Click on Map to select Location)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF4500" />

            <LinearLayout
                android:id="@+id/wrap_map"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@+id/textView_office_location">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/map_View"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView_paniccenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wrap_map"
                android:text="@string/paniccenter_info"
                android:textColor="#FF4500"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView_paniccenter"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Emergency Contact Number 1"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText5"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Emergency Contact Number 2"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText6"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Emergency Contact Number 3"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText7"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Emergency Contact Number 4"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editText9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText8"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Emergency Contact Number 5"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/btn_lawyer_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText9"
                android:background="#FF4500"
                android:backgroundTint="#FF4500"
                android:gravity="center"
                android:text="Submit"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>