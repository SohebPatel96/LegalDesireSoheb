<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.msp.legaldesire.Chat_Room">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:id="@+id/message_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wrap_button_and_edittext"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:divider="#00000000"
        android:dividerHeight="2dp"></ListView>

    <RelativeLayout
        android:id="@+id/wrap_button_and_edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:background="@color/grey_300">

        <EditText
            android:id="@+id/edit_addroom2"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_edittext"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_add_room2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/edit_addroom2"
            android:background="@drawable/ic_action_send"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/btn_select_media"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_add_room2"
            android:background="@drawable/ic_action_add" />


    </RelativeLayout>


</RelativeLayout>
