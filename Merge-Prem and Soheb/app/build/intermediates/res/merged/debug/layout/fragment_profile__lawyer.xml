<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.msp.legaldesire.Profile_Lawyer">

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:background="#F17A12"
        android:orientation="horizontal"></LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/lawyerprofilepic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/btn_upload_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lawyerprofilepic"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        android:text="Upload Photo"
        android:layout_marginTop="60dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/lawyertxt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lawyerprofilepic"
        android:layout_below="@id/linearlayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textSize="20sp" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/lawyertxt_name"
        android:background="#F17A12" />

    <ImageView
        android:id="@+id/img_email"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lawyertxt_name"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/orange_email" />

    <TextView
        android:id="@+id/lawyertxt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lawyertxt_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_email"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lawyertxt_email"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/orange_phone" />

    <TextView
        android:id="@+id/lawyertxt_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lawyertxt_email"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_phone"
        android:textSize="14sp" />


    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/lawyertxt_contact"
        android:layout_marginBottom="10dp"
        android:background="#F17A12" />

    <ImageView
        android:id="@+id/img_lawyertype"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/orange_lawyertype" />

    <TextView
        android:id="@+id/lawyertxt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_lawyertype"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_location"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lawyertxt_type"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/orange_location" />

    <TextView
        android:id="@+id/lawyertxt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_lawyertype"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="location"
        android:layout_toRightOf="@id/img_location"
        android:textSize="14sp" />




</RelativeLayout>
