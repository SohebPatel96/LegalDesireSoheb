<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        tools:context="com.example.msp.legaldesire.Appointment_BookLawyer">

        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:background="#F17A12"
            android:orientation="horizontal"></LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/lawyerprofilepic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/lawyertxt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_toRightOf="@+id/lawyerprofilepic"
            android:textSize="20sp" />


        <View
            android:id="@+id/view3"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/lawyertxt_name"
            android:background="#F17A12" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:layout_centerHorizontal="true"
            android:text="Select Appointment Date"
            android:textSize="20sp" />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_centerHorizontal="true"
            android:calendarViewShown="false" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/datePicker"
            android:layout_centerHorizontal="true"
            android:text="Lawyer will visit you at:"
            android:textSize="20sp" />

        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt2"
            android:layout_centerHorizontal="true" />


        <Button
            android:id="@+id/btn_select_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numberPicker"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner2"
            android:gravity="center"
            android:padding="10dp"
            android:text="Select Location"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>
</ScrollView>
