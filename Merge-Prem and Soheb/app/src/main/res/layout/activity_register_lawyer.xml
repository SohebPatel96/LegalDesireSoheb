<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:padding="20dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_register_lawyer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.msp.legaldesire.RegisterLawyer">

        <TextView
            android:id="@+id/textView_account_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_info"
            android:textColor="#FF4500"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/enter_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_account_info"
            android:gravity="center"
            android:text="Enter Email"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF4500" />

        <EditText
            android:id="@+id/edit_email_field2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/enter_email"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/txt_domain2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_email"
            android:layout_toRightOf="@+id/edit_email_field2"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/enter_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_email_field2"
            android:gravity="center"
            android:text="Enter Password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF4500" />

        <EditText
            android:id="@+id/edit_password_field2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/enter_password"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword" />


        <TextView
            android:id="@+id/textView_personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_password_field2"
            android:text="@string/personal_info"
            android:textColor="#FF4500"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_enterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_personal"
            android:gravity="center"
            android:text="Enter your Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF4500" />

        <EditText
            android:id="@+id/editText_name23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_enterName"
            android:gravity="center"
            android:hint="Name" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_name23"
            android:gravity="center"
            android:text="Enter your Mobile Number"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF4500" />

        <EditText
            android:id="@+id/editText_contactno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:gravity="center"
            android:hint="Contact No"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_contactno"
            android:gravity="center"
            android:text="Enter your City"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF4500" />

        <EditText
            android:id="@+id/editText_city2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:gravity="center"
            android:hint="City" />


        <TextView
            android:id="@+id/textView_professional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_city2"
            android:text="@string/pro_info"
            android:textColor="#FF4500"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_professional"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Type of Lawyer:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF4500" />

        <LinearLayout
            android:id="@+id/wrap_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_type"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radio_grp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_civil2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Civil"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radio_criminal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Criminal"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radio_corporate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Corporate"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radio_all2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="16sp" />
            </RadioGroup>

        </LinearLayout>


        <TextView
            android:id="@+id/textView_office_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wrap_type"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Select Office/Firm Location(Click on Map to select Location)"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF4500" />

        <LinearLayout
            android:id="@+id/wrap_map"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/textView_office_location">

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_View2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_paniccenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wrap_map"
            android:text="@string/paniccenter_info"
            android:textColor="#FF4500"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edit_contactlawyer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_paniccenter"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Emergency Contact Number 1"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edit_contactlawyer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_contactlawyer1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Emergency Contact Number 2"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edit_contactlawyer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_contactlawyer2"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Emergency Contact Number 3"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edit_contactlawyer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_contactlawyer3"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Emergency Contact Number 4"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edit_contactlawyer5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_contactlawyer4"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Emergency Contact Number 5"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btn_lawyer_submit_register2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_contactlawyer5"
            android:background="#FF4500"
            android:backgroundTint="#FF4500"
            android:gravity="center"
            android:text="Submit"
            android:textColor="#FFFFFF" />

    </RelativeLayout>
</ScrollView>
