<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:padding="20dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_register_regular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.msp.legaldesire.RegisterRegular">


        <TextView
            android:id="@+id/textView_account_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_info"
            android:textColor="#FF4500"
            android:textSize="25sp" />



        <TextView
            android:id="@+id/enter_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_account_info"
            android:gravity="center"
            android:text="Enter Email"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF4500" />

        <EditText
            android:id="@+id/edit_email_field"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/enter_email"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/txt_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_email"
            android:layout_toRightOf="@+id/edit_email_field"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/enter_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_email_field"
            android:gravity="center"
            android:text="Enter Password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF4500" />

        <EditText
            android:id="@+id/edit_password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/enter_password"
            android:hint="Password"
            android:inputType="textPassword" />


        <TextView
            android:id="@+id/textView_personal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_password_field"
            android:text="@string/personal_info"
            android:textColor="#FF4500"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_enterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_personal2"
            android:gravity="center"
            android:text="Enter your Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF4500" />

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_enterName"
            android:gravity="center"
            android:hint="Name" />


        <TextView
            android:id="@+id/textView42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_name"
            android:gravity="center"
            android:text="Enter your Mobile Number"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF4500" />

        <EditText
            android:id="@+id/editText_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView42"
            android:gravity="center"
            android:hint="Contact No"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_contact"
            android:gravity="center"
            android:text="Enter your City"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF4500" />

        <EditText
            android:id="@+id/editText_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView52"
            android:gravity="center"
            android:hint="City" />


        <TextView
            android:id="@+id/textView_paniccenter2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_city"
            android:text="@string/paniccenter_info"
            android:textColor="#FF4500"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editText_contact1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_paniccenter2"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Emergency Contact Number 1"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editText_contact2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_contact1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Emergency Contact Number 2"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editText_contact3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_contact2"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Emergency Contact Number 3"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editText_contact4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_contact3"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Emergency Contact Number 4"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editText_contact5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_contact4"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Emergency Contact Number 5"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btn_lawyer_submit_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_contact5"
            android:background="#FF4500"
            android:backgroundTint="#FF4500"
            android:gravity="center"
            android:text="Submit"
            android:textColor="#FFFFFF" />

    </RelativeLayout>
</ScrollView>
