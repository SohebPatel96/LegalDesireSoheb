<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:padding="20dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.msp.legaldesire.Regular_User_registration">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <TextView
                android:id="@+id/textView_personal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/personal_info"
                android:textColor="#FF4500"
                android:textSize="25sp" />





            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView_personal2"
                android:gravity="center"
                android:text="Enter your Mobile Number"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF4500" />

            <EditText
                android:id="@+id/editText32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView42"
                android:gravity="center"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText32"
                android:gravity="center"
                android:text="Enter your City"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF4500" />

            <EditText
                android:id="@+id/editText42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView52"
                android:gravity="center" />


            <TextView
                android:id="@+id/textView_paniccenter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText42"
                android:text="@string/paniccenter_info"
                android:textColor="#FF4500"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editText52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView_paniccenter2"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Emergency Contact Number 1"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editText62"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText52"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Emergency Contact Number 2"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editText72"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText62"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Emergency Contact Number 3"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editText82"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText72"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Emergency Contact Number 4"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editText92"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText82"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Emergency Contact Number 5"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/btn_lawyer_submit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText92"
                android:background="#FF4500"
                android:backgroundTint="#FF4500"
                android:gravity="center"
                android:text="Submit"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>